set_from_resource $urgentbg     color9

#                               border          background              text            indicator
client.focused                  $bg             $abg                    $textcolor      $bg
client.unfocused                $ibg	        $ibg	                $textcolor      $ibg	 
client.focused_inactive         $ibg	        $ibg	                $itextcolor     $ibg	 
client.urgent                   $urgentbg       $urgentbg               $textcolor      $urgentbg

