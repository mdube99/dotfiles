#change focus
bindsym $mod+H focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

#move focused window
bindsym $mod+Shift+H move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move right
bindsym $mod+Shift+l move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+Space floating toggle

bindsym $mod+Shift+r reload
bindsym $mod+Shift+c restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $Mod+Shift+x exec --no-startup-id betterlockscreen -l dimblur

# Floating positions (all corners of the screen) - useful for terminals
bindsym $alt+h floating enable; resize set 720 480; move window to position 50px 25px
bindsym $alt+j floating enable; resize set 720 480; move window to position 50px 550px
bindsym $alt+k floating enable; resize set 720 480; move window to position 1150px 550px
bindsym $alt+l floating enable; resize set 720 480; move window to position 1150px 25px

bindsym $alt+Left floating enable; resize set 720 480; move window to position 50px 25px
bindsym $alt+Down floating enable; resize set 720 480; move window to position 50px 550px
bindsym $alt+Up floating enable; resize set 720 480; move window to position 1150px 550px
bindsym $alt+Right floating enable; resize set 720 480; move window to position 1150px 25px

bindsym $mod+Shift+q kill
bindsym $mod+Return $term
bindsym $mod+Shift+Return exec --no-startup-id st -c float


bindsym $mod+d exec ~/dotfiles/rofi/launcher.sh
bindsym Shift+F1 exec ~/development/scripts/flux

mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym shift+j resize shrink width 25 px or 25 ppt
        bindsym shift+k resize grow height 25 px or 25 ppt
        bindsym shift+l resize shrink height 25 px or 25 ppt
        bindsym shift+semicolon resize grow width 25 px or 25 ppt

        # same bindings, but for the arrow keys
        bindsym shift+Left resize shrink width 25 px or 25 ppt
        bindsym shift+Down resize grow height 25 px or 25 ppt
        bindsym shift+Up resize shrink height 25 px or 25 ppt
        bindsym shift+Right resize grow width 25 px or 25 ppt
        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

mode "gaps" {

    # These bindings trigger as soon as you enter gaps mode
    bindsym $mod+s gaps inner current plus 5
    bindsym $mod+Shift+s gaps inner current minus 5
    bindsym $mod+a gaps outer current plus 5
    bindsym $mod+Shift+a gaps outer current minus 5
    bindsym $mod+Shift+g gaps inner current set $inner_gaps; gaps outer current set $outer_gaps
    
    bindsym $mod+h gaps left current plus 5
    bindsym $mod+Shift+h gaps left current minus 5

    bindsym $mod+j gaps top current plus 5
    bindsym $mod+Shift+j gaps top current minus 5

    bindsym $mod+k gaps bottom current plus 5
    bindsym $mod+Shift+k gaps bottom current minus 5

    bindsym $mod+l gaps right current plus 5
    bindsym $mod+Shift+l gaps right current minus 5

    bindsym Return mode "default"
    bindsym Escape mode "default"

}

bindsym $mod+g mode "gaps"

#Sreen brightness controls
# Had a lot of issues with xbacklight not working, got around this with light-git
bindsym XF86MonBrightnessUp exec light -A 5
bindsym XF86MonBrightnessDown exec light -U 5

# Multimedia Keys
# increase volume
bindsym XF86AudioRaiseVolume exec amixer -D pulse sset Master 2%+
# decrease volume
bindsym XF86AudioLowerVolume exec amixer -D pulse sset Master 2%- unmute
# mute volume
bindsym XF86AudioMute exec $HOME/dotfiles/i3/scripts/volume-toggle
# Print screen
bindsym Print exec flameshot gui


# Scripts

# Disable touchpad
bindsym $mod+t exec $HOME/dotfiles/i3/scripts/toggle-touchpad
# Disable laptop keyboard
bindsym $mod+$alt+shift+t exec $HOME/dotfiles/i3/scripts/toggle-laptop-keyboard
# Toggle dock
bindsym $mod+Shift+d exec $HOME/development/scripts/dock
bindsym $alt+d exec $HOME/dotfiles/rofi/xrandr.sh
bindsym $alt+t exec $HOME/dotfiles/rofi/theme.sh

