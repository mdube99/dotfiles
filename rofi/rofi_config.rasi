configuration{
    modi: "drun";
    width: 40;
    columns: 1;
    lines: 5;
    font: "JetBrainsMono NerdFont 12";
    show-icons: true;
    icon-theme: "Oranchelo";
    terminal: "st";
    drun-display-format: "{icon} {name}";
    display-drun: "ï„µ ";
    location: 0;
    separator-style: "solid";
    disable-history: false;
    hide-scrollbar: true;
}

* {
    background-color:  #1e222a;
    border-color: #D8DEE9;
    text-color: #D8DEE9;
    separator-color: @border-color;
    font: "JetBrainsMono NerdFont 12";
    show-icons: true;
}

window {
    padding: 10px;
    height: 420px;
    border: 4px;
    border-color: #e16c75;
    border-radius: 13px;
}

mainbox {
    padding: 5px;
    border-radius: 13px;
}

inputbar {
    children: [prompt,entry];
}

prompt {
    background-color: #61afef;
    padding: 5px 5px 0px;
    text-color: @background-color;
}

textbox-prompt-colon {
    expand: false;
    str: ":";
}

entry {
    padding: 5px;
}

listview {
    border: 0px 0px 0px;
    padding: 6px 0px 0px;
    columns: 2;
}

element {
    padding: 5px;
}

element-icon {
size: 25px;
}

element selected {
    background-color: #282c34  ;
    text-color: #fff ;
}

element urgent {
    background-color: #BF616A;
    text-color: @background-color;
}

element active {
    background-color: #EBCB8B;
    text-color: @background-color;
}
